# https://the.exa.website/ - A modern replacement for ‘ls’
alias ls='exa'
alias ll='ls -alF'
alias la='ls -a'
alias lld='ls -alF --group-directories-first'

# https://github.com/sharkdp/bat - A cat(1) clone with wings
alias cat='bat'

# Git shorthands
alias gs='git status'
alias gf='git fetch'
alias gp='git pull'
alias gd='git diff'
alias gcan='git commit --amend --no-edit'
alias gprf='git pull --rebase && git forbranch'

# https://awsu.me/
alias awsume='. awsume'

alias at='alacritty-themes'
