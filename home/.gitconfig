[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    line-numbers = true
    side-by-side = true
    syntax-theme = Monokai Extended Bright

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default


